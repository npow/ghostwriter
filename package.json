{
  "name": "ghostwriter",
  "version": "0.1.0",
  "private": true,
  "description": "Autonomous AI content engine with anti-slop quality gates",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "test": "turbo test",
    "lint": "turbo lint",
    "clean": "turbo clean",
    "cli": "node packages/cli/dist/index.js",
    "db:generate": "pnpm --filter @ghostwriter/database db:generate",
    "db:migrate": "pnpm --filter @ghostwriter/database db:migrate",
    "db:studio": "pnpm --filter @ghostwriter/database db:studio"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.7.0"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=22.0.0"
  }
}
